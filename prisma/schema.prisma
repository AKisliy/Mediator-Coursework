generator client {
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  provider      = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DB_URL")
  directUrl = env("PRISMA_DIRECT_URL")
}

model User {
  id             String  @id
  username       String
  name           String
  image          String?
  searches_count Int     @default(0)

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  planId    Int          @default(4)
  plan      Plan         @relation(fields: [planId], references: [id])
  searches  UserSearch[]
}

model Plan {
  id            Int    @id @default(autoincrement())
  name          String
  monthly_limit Int
  users         User[]
}

model UserSearch {
  id        String    @id @db.Uuid
  createdAt DateTime  @default(now())
  query     String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  bloggers  Blogger[]
}

model Blogger {
  id           String       @id
  username     String
  photo_link   String
  followers    Int
  niche        String
  social_media SocialMedia
  searches     UserSearch[]
}

enum SocialMedia {
  Telegram
  Instagram

  @@map("social_media")
}
